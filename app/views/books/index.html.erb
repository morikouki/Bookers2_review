<div class="container">
<h1>Books#index</h1>

<%= form_for @booknew do |f| %>
	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :Opinion %><br>
		<%= f.text_area :body %>
	</div>
	<%= f.submit 'Create Book', class:'btn btn-primary' %>
<% end %>
</div>

<h2>Books</h2>
<table class="table">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td></td>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>

