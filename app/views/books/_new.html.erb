<h2>New book</h2>
<%= form_for booknew do |f| %>
	<div class="field row">
		<%= f.label :title %><br>
		<%= f.text_field :title, class:'col-xs-12' %>
	</div>
	<div class="field row">
		<%= f.label :Opinion %><br>
		<%= f.text_area :body, class:'col-xs-12' %>
	</div>
	<div class="field">
	<%= f.submit 'Create Book', class:'btn btn-primary btn-block' %>
</div>
<% end %>