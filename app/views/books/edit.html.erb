<div class="container">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<h1>Editing Book</h1>
			<%= form_for @book do |f| %>
			<div class="form-group row">
				<%= f.label :title %><br>
				<%= f.text_field :title, class:'col-xs-12' %>
			</div>
			<div class="form-group row">
				<%= f.label :opinion %><br>
				<%= f.text_area :body, class:'col-xs-12'%>
			</div>
			<div class="row">
				<%= f.submit 'Update Book', class:'btn btn-primary btn-block' %>
				<% end %>
			</div>
			<div class="field">
				<%= link_to 'Show', book_path(@book) %> | <%= link_to 'Back', books_path %>
			</div>
		</div>
	</div>
</div>
