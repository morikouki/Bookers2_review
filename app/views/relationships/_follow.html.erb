<% if current_user != user %>
	<% if current_user.following?(user) %>
		<%= link_to user_relationships_path(user), method: :delete, class: 'btn btn-primary', remote: true do %>
			フォロー外す
		<% end %>
	<% else %>
		<%= link_to user_relationships_path(user), method: :post, class: 'btn btn-success', remote: true do %>
			フォローする
		<% end %>
	<% end %>
<% else %>
	<%= link_to edit_user_path(user) do %>
		<span class="glyphicon glyphicon-wrench btn btn-default btn-block" aria-hidden="true"></span>
	<% end %>
<% end %>