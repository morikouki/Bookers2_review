<div class="container">
	<div class="row">
		<h2>Users</h2>
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "", fallback: ""%></td>
					<td><%= user.name %></td>
					<td><%= link_to 'Show', user_path(user) %></td>
				<tr>
				<% end %>
			</tbody>
		</table>
		<h2>User info</h2>
<%= form_for @user do |f| %>
<div class="field">
	<%= f.label :name %>
	<%= f.text_field :name %>
</div>
<div class="field">
	<%= f.label :image %>
	<%= f.attachment_field :profile_image %>
</div>
<div class="field">
	<%= f.label :introduction %>
	<%= f.text_area :introduction %>
</div>
<div class="field">
	<%= f.submit 'Update Book', class:'btn btn-default' %>
</div>
<% end %>

<%= form_for @booknew do |f| %>
	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :Opinion %><br>
		<%= f.text_area :body %>
	</div>
	<%= f.submit 'Create Book', class:'btn btn-primary' %>
<% end %>

	</div>
</div>