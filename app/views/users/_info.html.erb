<h2>User info</h2>
<table class="table">
	<tbody>
		<%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "", fallback: "noimage.png", size:'60x60'%>
		<tr>
			<th>name</th>
			<td><%= user.name %></td>
		</tr>
		<tr>
			<th>introduction</th>
			<td><%= user.introduction %></td>
		</tr>
		<tr>
			<th>フォロー中</th>
			<td><%= user.follower_user.count %></td>
		</tr>
		<tr>
			<th>フォロワー</th>
			<td><%= user.following_user.count %></td>
		</tr>
	</tbody>
</table>

<% if current_user != user %>
	<% if current_user.following?(user) %>
		<%= link_to user_relationships_path(user), method: :delete, class: 'btn btn-primary' do %>
			フォロー外す
		<% end %>
	<% else %>
		<%= link_to user_relationships_path(user), method: :post, class: 'btn btn-success' do %>
			フォローする
		<% end %>
	<% end %>
<% else %>
	<%= link_to edit_user_path(user) do %>
		<span class="glyphicon glyphicon-wrench btn btn-default btn-block" aria-hidden="true"></span>
	<% end %>
<% end %>