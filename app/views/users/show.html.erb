<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<p class="flash"><%= flash[:user_update] %></p>
			<%= render 'info', user: @user %>
			<%= render 'books/new', booknew: @booknew %>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<% @books.each do |book| %>
				<tbody>
					<tr>
						<td>
							<%= link_to user_path do %>
								<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class: "", fallback: "noimage.png", size:'60x60'%>
							<% end %>
						</td>
						<td>
							<%= link_to book_path(book) do %>
								<%= book.title %>
							<% end %>
						</td>
						<td><%= book.body %></td>
					</tr>
				</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>